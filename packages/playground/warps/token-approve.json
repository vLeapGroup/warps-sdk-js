{
  "protocol": "warp:3.0.0",
  "chain": "solana",
  "name": "Token Program: Approve Delegate",
  "title": "Approve Token Delegate",
  "description": "Approve a delegate to spend tokens from your token account using the Token Program.",
  "actions": [
    {
      "type": "contract",
      "label": "Approve Delegate",
      "address": "TokenkegQfeZyiNwAJbNbGKPFXCWuBvf9Ss623VQ5DA",
      "func": "approve",
      "abi": "{\"instructions\":{\"approve\":{\"discriminator\":[4],\"args\":[{\"name\":\"amount\",\"type\":\"u64\"}]}}}",
      "accounts": [
        { "address": "{{USER_ATA:MINT_ADDRESS}}", "writable": true, "signer": false },
        { "address": "{{DELEGATE_ADDRESS}}", "writable": false, "signer": false },
        { "address": "{{USER_WALLET}}", "writable": false, "signer": true }
      ],
      "inputs": [
        {
          "name": "Mint Address",
          "as": "MINT_ADDRESS",
          "type": "address",
          "position": "input:0",
          "source": "field",
          "required": true,
          "description": "The mint address of the token."
        },
        {
          "name": "Delegate Address",
          "as": "DELEGATE_ADDRESS",
          "type": "address",
          "position": "input:1",
          "source": "field",
          "required": true,
          "description": "The address to approve as delegate."
        },
        {
          "name": "Amount",
          "description": "Amount of tokens to approve for the delegate.",
          "type": "biguint",
          "position": "arg:0",
          "source": "field",
          "required": true,
          "min": 1
        }
      ]
    }
  ],
  "messages": {
    "success": "Delegate approved successfully."
  }
}
